extends layout

block head
  title The Ultimate Spreadsheet Guide
  link(rel="stylesheet", href="/css/spreadsheet.css")

block content
  h1 Test bed for spreadsheets
  table#spreadsheet
    tr
      th
      for col in cols
        th(scope="col") #{col}
    for row in data
      tr
        th(scope="row") 1
        for cell in row
          td(data-formula=cell.formula || cell.value) #{cell.value}
  