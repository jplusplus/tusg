extends layout

block head
  title The Ultimate Spreadsheet Guide
  link(rel="stylesheet", href="/css/spreadsheet.css")

block content
  h1 Test bed for spreadsheets
  div.spreadsheet("tabIndex"=1)
    form
      span.topleft 𝑓𝑥
      input(disabled=true)
    table
      thead
        tr
          th
          for col in cols
            th(scope="col") #{col}
      tbody
        - var r = 1
        for row in data
          tr
            th(scope="row") #{r}
            - r++
            - var c = 1
            for cell in row
              td(data-formula=cell.formula || cell.value,
                 col=c-1, row=r-1) #{cell.value}
              - c++

    div.diagonal.diagonal-one
    div.diagonal.diagonal-two